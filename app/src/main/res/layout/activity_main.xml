<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:padding="20dp"
    android:background="@drawable/bg_view">

    <ImageView
        android:id="@+id/ivRightCorner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:contentDescription="Right Corner Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_logout_24" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Welcome To Telemedicine!"
        android:textColor="@color/tealGreen"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivRightCorner" />

    <TextView
        android:id="@+id/textViewServices"
        android:layout_width="273dp"
        android:layout_height="62dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="16dp"
        android:text="Discover Our Services "
        android:textColor="@color/tealGreen"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDashboard" />

    <TextView
        android:id="@+id/textViewDashboard"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:text="Dashboard"
        android:textColor="@color/tealGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcome" />

    <LinearLayout
        android:id="@+id/linearLayoutFirstRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewServices">

        <!-- Action Button 1 -->

        <!-- Action Button 2 -->

        <Button
            android:id="@+id/buttonArticle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundcolor"
            android:text="Find Articles"
            android:textColor="@android:color/black"
            app:cornerRadius="50dp" />


        <Button
            android:id="@+id/buttonDoctorView"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundcolor"
            android:text="Doctor Details"
            android:textColor="@android:color/black"
            app:cornerRadius="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSecondRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:padding="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutFirstRow">

        <!-- Action Button 3 -->
        <Button
            android:id="@+id/buttonMedicine"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundcolor"
            android:text="Find Medicine"
            android:textColor="@android:color/black"
            app:cornerRadius="50dp" />

        <!-- Action Button 4 -->
        <Button
            android:id="@+id/buttonLab"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundcolor"
            android:text="Lab assistance"
            android:textColor="@android:color/black"
            app:cornerRadius="50dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutThirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSecondRow">

        <!-- Action Button 3 -->
        <Button
            android:id="@+id/buttonReminder"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundcolor"
            android:text="Reminder"
            android:textColor="@android:color/black"
            app:cornerRadius="50dp" />

        <!-- Action Button 4 -->
        <Button
            android:id="@+id/buttonChat"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/backgroundcolor"
            android:text="Message"
            android:textColor="@android:color/black"
            app:cornerRadius="50dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonCart"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:backgroundTint="@color/backgroundcolor"
        android:text="My Cart"
        android:textColor="@android:color/black"
        app:cornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSecondRow" />

    <TextView
        android:id="@+id/textViewAboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:padding="16dp"
        android:text="About Us"
        android:textColor="@color/tealGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSecondRow" />

    <TextView
        android:id="@+id/textViewAboutUsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#B8EFF3"
        android:text="Welcome to our Telemedicine app! We are dedicated to providing you with convenient access to healthcare services online. Our platform offers features such as online chat with medical professionals, lab assistant services, and an easy way to find doctors and medical facilities near you."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAboutUs" />


</androidx.constraintlayout.widget.ConstraintLayout>
